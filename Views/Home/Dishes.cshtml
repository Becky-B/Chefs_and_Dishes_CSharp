@model List<Dish>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <title>List of Dishes</title>
    </head>
    <body>
        <div class="jumbotron">
            <div class="row">
                <div class="col-sm-6 text-center ">
                    <h1><a asp-action="Index">Chefs </a>| Dishes</h1>
                </div>
                <div class="col-sm-6 text-center">
                    <h4><a asp-action="NewDish">Add a Dish</a></h4>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <h2>Check Out Our Dishes!</h2>
            </div>
            <table class="table table-striped" >
                <thead>
                    <tr>
                        <th>Name </th>
                        <th>Chef </th>
                        <th>Tastiness </th>
                        <th>Calories </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (Dish dish in @Model)
                        {
                            <td>@dish.DishName</td>
                            <td>@dish.Creator</td>
                            <td>@dish.Tastiness</td>
                            <td>@dish.Calories</td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
    </html>