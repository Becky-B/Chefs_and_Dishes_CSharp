@model List<Chef>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Chefs List</title>
</head>
<body>
    <div class="jumbotron">
        <div class="row">
            <div class="col-sm-6 text-center ">
                <h1>Chefs |<a asp-action="Dishes">Dishes</a></h1>
            </div>
            <div class="col-sm-6 text-center">
                <h4><a asp-action="NewChef">Add a Chef</a></h4>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <h2>Check Out our Chefs!</h2>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </tr>
            </thead>
            <tbody style="width:800px;height:400px;line-height:3em;overflow:auto;padding:5px;">
                <tr>
                    @foreach (Chef chef in @Model)
                    {
                        <tr>
                            <td>@chef.FirstName @chef.LastName</td>
                            <td>@chef.Age</td>
                            <td>@chef.CreatedDishs.Count</td>
                        </tr>
                    }
                </tr>
            </tbody>
        </table>
        </div>
    </div>

</body>
</html>